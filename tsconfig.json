{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "module": "NodeNext",
    "target": "ESNext",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
